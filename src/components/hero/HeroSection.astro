---
import SocialLinks from '../../components/social-links/SocialLinks.astro';
---

<section class="flex flex-col text-black">
  <div class="max-w-4xl">
    <h1 class="text-2xl font-semibold pb-4 text-textDarkPink">Isabel Caballero</h1>
    <div class="flex md:gap-0 gap-4 flex-col md:flex-row">
      <div class="text-textPrincipal font-bold flex flex-col gap-y-1">
        <span class="text-3xl md:text-8xl">Desarrolladora</span>
        <span class="text-3xl md:text-9xl">FrontEnd</span>
      </div>
    </div>

    <div class="flex flex-col">
      <h2 class="pt-4 text-base md:text-2xl text-wrap md:mt-4">
        <span class="text-textDarkPink text-3xl font-semibold">+3 años de experiencia.</span><br />
        Vivo en Bogotá, Colombia.
        <br />
        Especializada en crear interfaces de usuario intuitivas, dinámicas y únicas.
      </h2>
    </div>

    <nav class="flex flex-wrap md:gap-x-4 mt-8 text-xs md:text-xl md:justify-normal">
      <SocialLinks class="text-white md:gap-x-4" useSocialPill={true} />
    </nav>
  </div>
</section>
